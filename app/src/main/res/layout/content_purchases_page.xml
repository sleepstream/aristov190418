<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:background="@drawable/gradient"
    android:id="@+id/root_layout"
    tools:targetApi="LOLLIPOP">

    <RelativeLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="12dp"
            android:paddingLeft="12dp">
        <RelativeLayout
                android:id="@+id/accountingListData"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@color/white">
            <ImageView
                    android:id="@+id/account_logo_image"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_alignParentStart="true"/>
            <TextView
                    android:id="@+id/account_name"
                    android:layout_toEndOf="@+id/account_logo_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="?TextAppeareance_onWhite"
                    android:textSize="18sp"/>
        </RelativeLayout>

        <RelativeLayout
                android:id="@+id/storeData"
                android:layout_alignParentStart="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/accountingListData"
                android:background="@color/white">
            <RelativeLayout
                    android:id="@+id/placeImageLayout"
                    android:layout_alignParentStart="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">
                <ImageView
                        android:id="@+id/placeImage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"/>
            </RelativeLayout>
            <RelativeLayout
                    android:elevation="5dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:layout_below="@+id/placeImageLayout"
                    android:layout_alignParentEnd="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/map">
                <TextView
                        android:id="@+id/strore_name"
                        android:fontFamily="sans-serif"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:textSize="14sp"
                        android:textAllCaps="true"
                        android:gravity="center"/>

                <TextView
                        android:id="@+id/strore_adress"
                        android:fontFamily="sans-serif"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:textSize="14sp"
                        android:gravity="center"
                        android:textAllCaps="true"
                        android:layout_below="@id/strore_name"/>
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
                android:id="@+id/invoiceDate"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/storeData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">
            <RelativeLayout
                    android:id="@+id/invoice_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingEnd="20dp"
                    android:paddingStart="20dp">
                <TextView
                    android:id="@+id/invoice_date_name_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="?TextAppeareance_onWhite"
                    android:text="@string/invoice_date_name_text"/>
                <TextView
                        android:id="@+id/invoice_date_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/invoice_date_name_text"
                        android:gravity="end"
                        style="?TextAppeareance_onWhite"/>
            </RelativeLayout>
            <RelativeLayout
                    android:id="@+id/invoice_count"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingEnd="20dp"
                    android:paddingStart="20dp"
                    android:layout_below="@+id/invoice_date">
                <TextView
                        android:id="@+id/invoice_count_name_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="?TextAppeareance_onWhite"
                        android:text="@string/invoice_count_name_text"/>
                <TextView
                        android:id="@+id/invoice_count_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/invoice_count_name_text"
                        android:gravity="end"
                        android:text="34"
                        style="?TextAppeareance_onWhite"/>
            </RelativeLayout>
            <RelativeLayout
                    android:id="@+id/invoice_sum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingEnd="20dp"
                    android:paddingStart="20dp"
                    android:layout_below="@+id/invoice_count">
                <TextView
                        android:id="@+id/invoice_sum_name_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="?TextAppeareance_onWhite"
                        android:text="@string/invoice_sum_name_text"/>
                <TextView
                        android:id="@+id/invoice_sum_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/invoice_sum_name_text"
                        android:gravity="end"
                        android:text="34"
                        style="?TextAppeareance_onWhite"/>
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
                android:id="@+id/products_category"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/invoiceDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center">
            <RelativeLayout android:id="@+id/category_title_layout" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerHorizontal="true">
                <TextView
                        android:id="@+id/category_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/title_category_products"
                        style="?TextAppeareance_onWhite"
                        android:textSize="15sp"/>
            </RelativeLayout>
            <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/category_title_layout" android:layout_centerHorizontal="true">
                <android.support.v7.widget.RecyclerView
                        android:id="@+id/products_category_list"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
            </RelativeLayout>
        </RelativeLayout>






    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/mainView"
            android:elevation="5dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:visibility="gone">
        <RelativeLayout
                android:id="@+id/cardList_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <android.support.v7.widget.RecyclerView
                    android:id="@+id/cardList"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal|top"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:fillViewport="true"/>
            <RelativeLayout
                    android:id="@+id/button_select_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:visibility="gone"
                    android:background="?colorBackground"
                    android:layout_marginBottom="40dp">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="?TextAppeareance_onWhite"
                        android:text="@string/button_select_category"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:textSize="18sp"/>
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
                android:id="@+id/categories_choose"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:background="@color/black_87">
            <RelativeLayout
                    android:id="@+id/tile_category_chooser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:gravity="center">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="?TextAppeareance_onDark"
                        android:text="@string/button_select_category"
                        android:textSize="18sp"/>
            </RelativeLayout>
            <RelativeLayout
                    android:id="@+id/categories_category_chooser"
                    android:layout_below="@+id/tile_category_chooser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <android.support.v7.widget.RecyclerView
                        android:id="@+id/category_chooser_list"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
            </RelativeLayout>
            <RelativeLayout
                    android:id="@+id/categories_choose_button"
                    android:layout_alignParentBottom="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?colorBackground"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="20dp">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/categories_category_chooser_button_title"
                        style="?TextAppeareance_onDark"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:textSize="18sp"/>
            </RelativeLayout>
        </RelativeLayout>


    </RelativeLayout>




</RelativeLayout>
