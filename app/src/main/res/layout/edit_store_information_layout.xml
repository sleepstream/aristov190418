<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/AppTheme"
                android:layout_margin="20dp"
                android:gravity="center">


<EditText
        android:id="@+id/name"
        android:background="@null"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="3dp"
        android:paddingTop="3dp"
        android:maxLength="20"
        android:inputType="text"
        android:textStyle="normal"
        android:textSize="20sp"
        android:fontFamily="sans-serif"
        android:hint="@string/title_storeName"/>
    <View
            android:layout_below="@+id/name"
            android:id="@+id/lineName"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/dark_gray"/>
<android.support.v7.widget.AppCompatSpinner
        android:id="@+id/storeType"
        android:layout_below="@+id/lineName"
        android:background="@null"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="3dp"
        android:paddingTop="3dp"
        android:maxLength="20"
        android:textStyle="normal"
        android:textSize="20sp"
        android:fontFamily="sans-serif"
        android:hint="@string/title_storeType"/>
<View
        android:layout_below="@+id/storeType"
        android:id="@+id/lineFD"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/dark_gray"/>

</RelativeLayout>