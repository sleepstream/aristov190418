<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <RelativeLayout
            android:id="@+id/ThemeSettings"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:padding="10dp">
        <RelativeLayout
                android:id="@+id/left"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:padding="10dp">
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_color_lens_black_36dp"/>
        </RelativeLayout>
        <RelativeLayout
                android:id="@+id/right"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/left"
                android:padding="10dp">
            <TextView
                    android:id="@+id/ThemeSettings_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_ThemeSettings_text"
                    style="?TextAppeareance"/>
            <TextView
                    android:id="@+id/ThemSettings_summary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ThemeSettings_text"
                    android:text="@string/settings_ThemeSettings_summary"
                    style="?TextAppeareance_small"/>
        </RelativeLayout>
        <View
                android:layout_below="@+id/right"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@drawable/line" />
    </RelativeLayout>

</RelativeLayout>