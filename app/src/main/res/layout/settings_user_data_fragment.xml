<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
android:padding="15dp">
    <RelativeLayout
            android:id="@+id/NameField"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:padding="10dp">
        <RelativeLayout
                android:id="@+id/NameField_status_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:visibility="gone">
            <ImageView
                    android:id="@+id/NameField_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

        </RelativeLayout>
        <RelativeLayout
                android:id="@+id/NameField_status_data"
                android:layout_toEndOf="@+id/NameField_status_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="10dp">

            <TextView
                    android:id="@+id/NameField_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:text="@string/settings_personalData_text"
                    style="?TextAppeareance"/>
            <TextView
                    android:id="@+id/NameField_summary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/NameField_text"
                    style="?TextAppeareance_small"/>
        </RelativeLayout>
        <View
                android:layout_below="@+id/NameField_status_data"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@drawable/line" />
    </RelativeLayout>



    <RelativeLayout
            android:id="@+id/e_mail"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/NameField"
            android:padding="10dp">
        <RelativeLayout
                android:id="@+id/e_mail_status_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:visibility="gone">
            <ImageView
                    android:id="@+id/e_mail_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

        </RelativeLayout>
        <RelativeLayout
                android:id="@+id/e_mail_status_data"
                android:layout_toEndOf="@+id/e_mail_status_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="10dp">

            <TextView
                    android:id="@+id/e_mail_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/E_mailAdress"
                    style="?TextAppeareance"/>
            <TextView
                    android:id="@+id/e_mail_summary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/e_mail_text"
                    style="?TextAppeareance_small"/>
        </RelativeLayout>
        <View
                android:layout_below="@+id/e_mail_status_data"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@drawable/line" />
    </RelativeLayout>
    <RelativeLayout
            android:id="@+id/phone"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/e_mail"
            android:padding="10dp"
            android:paddingBottom="0dp">
        <RelativeLayout
                android:id="@+id/phone_status_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:visibility="gone">
            <ImageView
                    android:id="@+id/phone_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

        </RelativeLayout>
        <RelativeLayout
                android:id="@+id/phone_status_data"
                android:layout_toEndOf="@+id/phone_status_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="10dp">
            <TextView
                    android:id="@+id/phone_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_phone_number"
                    style="?TextAppeareance"/>
            <TextView
                    android:id="@+id/phone_summary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/phone_text"
                    style="?TextAppeareance_small"/>
        </RelativeLayout>
        <View
                android:layout_below="@+id/phone_status_data"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@drawable/line" />
    </RelativeLayout>

