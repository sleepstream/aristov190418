<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:id="@+id/root_layout"
                android:clipToPadding="false"
                android:layout_marginBottom="2dp">

    <LinearLayout
            android:id="@+id/groupDate"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:id="@+id/groupDateText"
                android:background="@android:color/transparent"
                android:layout_gravity="start|center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                style="?TextAppeareance"
                android:textSize="@dimen/list_text_group_date"/>
    </LinearLayout>
    <View
            android:id="@+id/marker"
            android:layout_alignTop="@+id/container"
            android:layout_height="match_parent"
            android:layout_alignBottom="@id/container"
            android:layout_width="10dp"/>
    <RelativeLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="90dp"
            android:layout_below="@id/groupDate"
            android:layout_toEndOf="@+id/marker"
            android:background="@color/white"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true">
        <View
                android:id="@+id/line"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@drawable/line" />
        <RelativeLayout
                android:id="@+id/left_theme"
                android:layout_width="match_parent"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/relativeReorder"
                android:layout_alignParentStart="true"
                android:layout_height="wrap_content">
            <RelativeLayout
                    android:id="@+id/leftInLeft"
                    android:layout_width="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    android:layout_toStartOf="@+id/fixLayout"
                    android:layout_height="wrap_content">
                <LinearLayout
                        android:id="@+id/currentDate"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <TextView
                            android:id="@+id/invoiceDate"
                            android:background="@android:color/transparent"
                            android:layout_gravity="start|center_vertical"
                            style="?TextAppeareance"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="60dp"
                            android:textSize="@dimen/list_text_date"/>
                </LinearLayout>
                <LinearLayout
                        android:id="@+id/name"
                        android:layout_below="@+id/currentDate"
                        android:layout_alignParentStart="true"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <ImageView
                            android:id="@+id/imageIcon"
                            android:layout_gravity="start"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    <TextView
                            android:id="@+id/storeName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            style="?TextAppeareance"
                            android:textSize="@dimen/list_text_name"/>
                </LinearLayout>
                <LinearLayout
                        android:id="@+id/sum"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/name"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/textlight"
                        android:gravity="center_vertical">
                    <TextView
                            android:id="@+id/quantity"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:gravity="start"
                            style="?TextAppeareance"
                            android:textSize="@dimen/list_text_count"/>
                    <TextView
                            android:id="@+id/invoiceSum"
                            android:background="@android:color/transparent"
                            android:gravity="end"
                            style="?TextAppeareance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="60dp"
                            android:textSize="@dimen/list_text_sum"/>

                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                    android:id="@+id/fixLayout"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true">
                <ImageView
                        android:id="@+id/fixImage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_star_border_black_24dp"/>
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
                android:layout_width="56dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:id="@+id/relativeReorder"
                android:layout_height="wrap_content">

            <ImageView
                    android:id="@+id/ivReorder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:tint="@color/textlight"
                    android:contentDescription="@null"
                    android:src="@drawable/ic_dehaze_white_24dp"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>